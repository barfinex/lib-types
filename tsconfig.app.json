{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    // ✅ Генерируем только декларации, без JS
    "declaration": true,
    "emitDeclarationOnly": true,
    // ✅ Исходники → дистрибутив
    "rootDir": "src",
    "outDir": "dist",
    // ✅ Метаданные сборки
    "tsBuildInfoFile": "../../dist/libs/types.tsbuildinfo",
    // ✅ Строгая типизация
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    // ✅ Для алиасов внутри пакета
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}